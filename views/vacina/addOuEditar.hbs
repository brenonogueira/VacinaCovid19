<h3>{{viewTitle}}</h3>

<form action="/vacina" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{paciente._id}}">
    <div class="form-row">
        <div class="form-group col md-6">
            <label>CNS: </label>
            <input type="text" class="form-control" name="cns" placeholder="Digite o seu CNS" value="{{paciente.cns}}">
        </div>
        <div class="form-group col md-6">
            <label>CPF: </label>
            <input type="text" class="form-control" name="cpf" placeholder="xxx.xxx.xxx-xx" value="{{paciente.cpf}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col md-6">
            <label>Nome: </label>
            <input type="text" class="form-control" name="nome" placeholder="Digite seu nome completo" value="{{paciente.nome}}">
        </div>
        <div class="form-group col md-6">
            <label>Nome da mãe:</label>
            <input type="text" class="form-control" name="nomeMae" placeholder="Digite o nome da sua mãe" value="{{paciente.nomeMae}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col md-6">
            <label>Nascimento: </label>
            <input type="text" class="form-control" name="nascimento" placeholder="dd/mm/aaaa" value="{{paciente.nascimento}}">
        </div>
        <div class="form-group col md-6">
            <label>Sexo: </label>
            <input type="text" class="form-control" name="sexo" placeholder="M ou F" value="{{paciente.sexo}}">   
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col md-6">
            <label>Categoria: </label>
            <input type="text" class="form-control" name="categoria" placeholder="Digite a sua categoria" value="{{paciente.categoria}}">
        </div>
        <div class="form-group col md-6">
            <label>Contato: </label>
            <input type="text" class="form-control" name="contato" placeholder="(xx)xxxxx-xxxx" value="{{paciente.contato}}">
        </div>
    </div>
    <div class="form-group">
        <label>Endereço: </label>
        <input type="text" class="form-control" name="endereco" placeholder="Rua Exemplo, Bairro Exemplo, N: xxxx (Apartamento XX)" value="{{paciente.endereco}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info" ><i class="fa fa-database"></i> Cadastrar</button>
         <a class="btn btn-secondary" href="/vacina/list"><i class="fa fa-list-alt"></i> Lista de cadastrados</a>
    </div>
</form>